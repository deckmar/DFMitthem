<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <style name="dash_userinfo">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="dash_userinfo_name" parent="@style/dash_userinfo">
        <item name="android:textSize">22dp</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>
    
    <style name="style_text_header">
        <item name="android:textAppearance">@android:style/TextAppearance.Holo.Large</item>
        <item name="android:textColor">#FF009E58</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">2dp</item>
    </style>
    
    <style name="style_text_normal">
        <item name="android:textAppearance">@android:style/TextAppearance.Holo.Medium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <!-- Login-screen -->
    <style name="style_text_login_label" parent="@style/style_text_normal">
        
    </style>
    
    <style name="style_text_login_input">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
</resources>
